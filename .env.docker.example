# Docker Environment Variables Template
# Copy this file to .env.docker and fill in your values
# NEVER commit .env.docker with real secrets to version control

# ===================
# PostgreSQL Settings
# ===================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=postgres

# ===================
# Application Settings
# ===================
NODE_ENV=development
APPLICATION_URL=http://localhost

# Port Configuration (Updated to new ports)
SERVER_PORT=8081
CLIENT_PORT=8080

# ===================
# CORS Configuration
# ===================
# Comma-separated list of allowed origins (no spaces)
# For development, include localhost with both old and new ports
CORS_ORIGINS=http://localhost:8080,http://localhost:3000

# ===================
# JWT Configuration
# ===================
# Generate secure secrets with: openssl rand -hex 64
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
JWT_ACCESS_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# ===================
# Redis Configuration
# ===================
# For docker-compose, use: redis://redis:6379
REDIS_URL=redis://redis:6379
# If you add Redis password: redis://:password@redis:6379

# ===================
# Twilio Configuration
# ===================
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_VERIFICATION_SERVICE_SID=your_twilio_verification_service_sid
OTP_EXPIRY_TIME=600000

# ===================
# Bank Verification
# ===================
BANK_VERIFICATION_API_URL=https://nubapi.com/api/verify
BANK_VERIFICATION_TOKEN=your_bank_verification_token

# ===================
# Client Environment
# ===================
# Updated to new backend port
NEXT_PUBLIC_API_URL=http://localhost:8081

# ===================
# Rate Limiting
# ===================
ENABLE_RATE_LIMIT=false
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
