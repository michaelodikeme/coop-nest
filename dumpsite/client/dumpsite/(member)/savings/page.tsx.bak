'use client';

import { useState, useEffect } from 'react';
import {
  Box,
  Card,
  CardContent,
  Typography,
  Button,
  Stack,
  Alert,
  Tabs,
  Tab,
  Divider,
  CircularProgress,
  IconButton,
  Tooltip,
  Table,
  TableBody,
  TableCell,
  TableContainer,
  TableHead,
  TableRow,
  Grid,
  TablePagination,
  Chip
} from '@mui/material';
import { Add as AddIcon, FileDownload, BarChart, AccountBalance, Receipt, History } from '@mui/icons-material';
import { useQuery } from '@tanstack/react-query';
import { useAuth } from '@/lib/auth';
import DashboardLayout from '@/components/dashboard/DashboardLayout';
import SavingsChart from '@/components/shared/components/SavingsChart';
import TransactionForm from '@/components/savings/TransactionForm';
import WithdrawalRequests from '@/components/savings/WithdrawalRequests';
import { savingsApi } from '@/services/api/savingsApi';
import { formatCurrency, formatDate } from '@/utils/formatting/format';
import ProtectedRoute from '@/components/auth/ProtectedRoute';
import LoadingSavingsPage from './loading';

interface TabPanelProps {
  children?: React.ReactNode;
  index: number;
  value: number;
}

function TabPanel(props: TabPanelProps) {
  const { children, value, index, ...other } = props;

  return (
    <div
      role="tabpanel"
      hidden={value !== index}
      id={`savings-tabpanel-${index}`}
      aria-labelledby={`savings-tab-${index}`}
      {...other}
    >
      {value === index && <Box sx={{ py: 3 }}>{children}</Box>}
    </div>
  );
}

export default function SavingsPage() {
  const { user } = useAuth();
  const [withdrawalOpen, setWithdrawalOpen] = useState(false);
  const [tabValue, setTabValue] = useState(0);
  const [page, setPage] = useState(0);
  const [rowsPerPage, setRowsPerPage] = useState(10);
  const [year, setYear] = useState(new Date().getFullYear());

  // Fetch savings summary
  const { 
    data: summary, 
    isLoading: summaryLoading, 
    error: summaryError, 
    refetch: refetchSummary 
  } = useQuery({
    queryKey: ['savings-summary'],
    queryFn: () => savingsApi.getSavingsSummary(),
  });

  // Fetch savings transaction history
  const {
    data: transactions,
    isLoading: transactionsLoading,
    error: transactionsError,
    refetch: refetchTransactions
  } = useQuery({
    queryKey: ['savings-transactions', page, rowsPerPage],
    queryFn: () => savingsApi.getTransactionHistory({
      page: page + 1,
      limit: rowsPerPage
    }),
  });

  // Fetch savings stats for the chart
  const {
    data: savingsStats,
    isLoading: statsLoading
  } = useQuery({
    queryKey: ['savings-stats', year],
    queryFn: () => savingsApi.getSavingsStats(year),
  });

  // Fetch user withdrawal requests
  const {
    data: withdrawalRequests,
    isLoading: withdrawalsLoading,
    refetch: refetchWithdrawals
  } = useQuery({
    queryKey: ['withdrawal-requests'],
    queryFn: () => savingsApi.getWithdrawalRequests(),
  });

  const handleTabChange = (event: React.SyntheticEvent, newValue: number) => {
    setTabValue(newValue);
  };

  const handleChangePage = (event: unknown, newPage: number) => {
    setPage(newPage);
  };

  const handleChangeRowsPerPage = (event: React.ChangeEvent<HTMLInputElement>) => {
    setRowsPerPage(parseInt(event.target.value, 10));
    setPage(0);
  };

  const handleWithdrawalSuccess = () => {
    refetchSummary();
    refetchWithdrawals();
  };

  const handleDownloadStatement = async () => {
    if (user?.biodata?.erpId) {
      try {
        await savingsApi.generateSavingsStatement(user.biodata.erpId);
      } catch (error) {
        console.error("Failed to download statement:", error);
      }
    }
  };

  if (summaryLoading && !summary) {
    return <LoadingSavingsPage />;
  }

  // Format withdrawal requests for display
  const formattedWithdrawalRequests = withdrawalRequests?.data ? 
    withdrawalRequests.data.map(request => ({
      id: request.id,
      status: request.status,
      createdAt: request.requestedAt,
      updatedAt: request.processedAt || request.requestedAt,
      details: {
        amount: request.amount,
        reason: request.reason
      },
      adminNotes: ''
    })) : [];

  return (
    <ProtectedRoute>
      <DashboardLayout>
        <Box sx={{ px: 3, pt: 3 }}>
          {summaryError && (
            <Alert severity="error" sx={{ mb: 3 }}>
              Failed to load savings information. Please try again later.
            </Alert>
          )}

          <Box sx={{ display: 'flex', justifyContent: 'space-between', alignItems: 'center', mb: 3 }}>
            <Typography variant="h4">My Savings</Typography>
            <Stack direction="row" spacing={2}>
              <Button
                variant="outlined"
                startIcon={<FileDownload />}
                onClick={handleDownloadStatement}
              >
                Download Statement
              </Button>
              <Button
                variant="contained"
                startIcon={<AddIcon />}
                onClick={() => setWithdrawalOpen(true)}
              >
                Request Withdrawal
              </Button>
            </Stack>
          </Box>

          {/* Summary Cards */}
          <Grid container spacing={3}>
            <Grid size={{ xs:12, md:4 }}>
              <Card>
                <CardContent>
                  <Box sx={{ display: 'flex', justifyContent: 'space-between', alignItems: 'flex-start', mb: 1 }}>
                    <Typography variant="h6">Total Savings</Typography>
                    <AccountBalance color="primary" />
                  </Box>
                  <Typography variant="h3">
                    {formatCurrency(summary?.totalSavings || 0)}
                  </Typography>
                  <Typography variant="body2" color="text.secondary" sx={{ mt: 1 }}>
                    Available for withdrawal
                  </Typography>
                </CardContent>
              </Card>
            </Grid>

            <Grid size={{ xs:12, md:4 }}>
              <Card>
                <CardContent>
                  <Box sx={{ display: 'flex', justifyContent: 'space-between', alignItems: 'flex-start', mb: 1 }}>
                    <Typography variant="h6">Total Shares</Typography>
                    <BarChart color="primary" />
                  </Box>
                  <Typography variant="h3">
                    {formatCurrency(summary?.totalShares || 0)}
                  </Typography>
                  <Typography variant="body2" color="text.secondary" sx={{ mt: 1 }}>
                    Accumulated shares value
                  </Typography>
                </CardContent>
              </Card>
            </Grid>

            <Grid size={{ xs:12, md:4 }}>
              <Card>
                <CardContent>
                  <Box sx={{ display: 'flex', justifyContent: 'space-between', alignItems: 'flex-start', mb: 1 }}>
                    <Typography variant="h6">Monthly Contribution</Typography>
                    <Receipt color="primary" />
                  </Box>
                  <Typography variant="h3">
                    {formatCurrency(summary?.monthlyContribution || 0)}
                  </Typography>
                  <Typography variant="body2" color="text.secondary" sx={{ mt: 1 }}>
                    Current monthly deduction
                  </Typography>
                </CardContent>
              </Card>
            </Grid>
          </Grid>

          {/* Tabs Navigation */}
          <Box sx={{ borderBottom: 1, borderColor: 'divider', mt: 4 }}>
            <Tabs value={tabValue} onChange={handleTabChange} aria-label="savings tabs">
              <Tab label="Overview" icon={<BarChart />} iconPosition="start" />
              <Tab label="Transaction History" icon={<History />} iconPosition="start" />
              <Tab label="Withdrawal Requests" icon={<Receipt />} iconPosition="start" />
            </Tabs>
          </Box>

          {/* Tab Panels */}
          <TabPanel value={tabValue} index={0}>
            <Grid container spacing={3}>
              <Grid size={{ xs:12 }}>
                <Card>
                  <CardContent>
                    <Typography variant="h6" gutterBottom>
                      Savings Overview ({year})
                    </Typography>
                    {statsLoading ? (
                      <Box sx={{ display: 'flex', justifyContent: 'center', p: 4 }}>
                        <CircularProgress />
                      </Box>
                    ) : (
                      <SavingsChart data={savingsStats} />
                    )}
                  </CardContent>
                </Card>
              </Grid>

              <Grid size={{ xs:12 }}>
                <Card>
                  <CardContent>
                    <Typography variant="h6" gutterBottom>
                      Recent Transactions
                    </Typography>
                    {transactionsLoading ? (
                      <Box sx={{ display: 'flex', justifyContent: 'center', p: 4 }}>
                        <CircularProgress />
                      </Box>
                    ) : transactions?.data && transactions.data.length > 0 ? (
                      <TableContainer>
                        <Table>
                          <TableHead>
                            <TableRow>
                              <TableCell>Date</TableCell>
                              <TableCell>Description</TableCell>
                              <TableCell align="right">Amount</TableCell>
                              <TableCell align="right">Type</TableCell>
                            </TableRow>
                          </TableHead>
                          <TableBody>
                            {transactions.data.slice(0, 5).map((transaction) => (
                              <TableRow key={transaction.id}>
                                <TableCell>{formatDate(transaction.date)}</TableCell>
                                <TableCell>{transaction.description}</TableCell>
                                <TableCell align="right">{formatCurrency(transaction.amount)}</TableCell>
                                <TableCell align="right">
                                  <Chip 
                                    label={transaction.type} 
                                    color={transaction.type === 'CREDIT' ? 'success' : 'error'} 
                                    size="small" 
                                  />
                                </TableCell>
                              </TableRow>
                            ))}
                          </TableBody>
                        </Table>
                      </TableContainer>
                    ) : (
                      <Typography variant="body2" color="text.secondary" sx={{ p: 2 }}>
                        No recent transactions found.
                      </Typography>
                    )}
                    {transactions?.data && transactions.data.length > 5 && (
                      <Box sx={{ display: 'flex', justifyContent: 'flex-end', mt: 2 }}>
                        <Button variant="text" onClick={() => setTabValue(1)}>
                          View All Transactions
                        </Button>
                      </Box>
                    )}
                  </CardContent>
                </Card>
              </Grid>
            </Grid>
          </TabPanel>

          <TabPanel value={tabValue} index={1}>
            <Card>
              <CardContent>
                <Typography variant="h6" gutterBottom>
                  Transaction History
                </Typography>
                {transactionsLoading ? (
                  <Box sx={{ display: 'flex', justifyContent: 'center', p: 4 }}>
                    <CircularProgress />
                  </Box>
                ) : transactions?.data && transactions.data.length > 0 ? (
                  <>
                    <TableContainer>
                      <Table>
                        <TableHead>
                          <TableRow>
                            <TableCell>Date</TableCell>
                            <TableCell>Description</TableCell>
                            <TableCell align="right">Amount</TableCell>
                            <TableCell align="right">Type</TableCell>
                            <TableCell align="right">Balance</TableCell>
                          </TableRow>
                        </TableHead>
                        <TableBody>
                          {transactions.data.map((transaction) => (
                            <TableRow key={transaction.id}>
                              <TableCell>{formatDate(transaction.date)}</TableCell>
                              <TableCell>{transaction.description}</TableCell>
                              <TableCell align="right">{formatCurrency(transaction.amount)}</TableCell>
                              <TableCell align="right">
                                <Chip 
                                  label={transaction.type} 
                                  color={transaction.type === 'CREDIT' ? 'success' : 'error'} 
                                  size="small" 
                                />
                              </TableCell>
                              <TableCell align="right">{formatCurrency(transaction.balance || 0)}</TableCell>
                            </TableRow>
                          ))}
                        </TableBody>
                      </Table>
                    </TableContainer>
                    <TablePagination
                      rowsPerPageOptions={[5, 10, 25]}
                      component="div"
                      count={transactions.total || 0}
                      rowsPerPage={rowsPerPage}
                      page={page}
                      onPageChange={handleChangePage}
                      onRowsPerPageChange={handleChangeRowsPerPage}
                    />
                  </>
                ) : (
                  <Typography variant="body2" color="text.secondary" sx={{ p: 2 }}>
                    No transactions found.
                  </Typography>
                )}
              </CardContent>
            </Card>
          </TabPanel>

          <TabPanel value={tabValue} index={2}>
            <Card>
              <CardContent>
                <Typography variant="h6" gutterBottom>
                  Withdrawal Requests
                </Typography>
                {withdrawalsLoading ? (
                  <Box sx={{ display: 'flex', justifyContent: 'center', p: 4 }}>
                    <CircularProgress />
                  </Box>
                ) : (
                  <WithdrawalRequests requests={formattedWithdrawalRequests} />
                )}
                <Box sx={{ display: 'flex', justifyContent: 'flex-end', mt: 2 }}>
                  <Button 
                    variant="contained" 
                    startIcon={<AddIcon />} 
                    onClick={() => setWithdrawalOpen(true)}
                  >
                    New Withdrawal Request
                  </Button>
                </Box>
              </CardContent>
            </Card>
          </TabPanel>

          {/* Withdrawal Request Dialog */}
          <TransactionForm
            open={withdrawalOpen}
            onClose={() => setWithdrawalOpen(false)}
            onSuccess={handleWithdrawalSuccess}
            maxAmount={summary?.totalSavings || 0}
          />
        </Box>
      </DashboardLayout>
    </ProtectedRoute>
  );
}